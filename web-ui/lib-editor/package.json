    "@types/react": "16.14.0",
    "@types/react-dom": "16.9.10",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "style-loader": "^0.23.1",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "typescript": "4.1.3",
    "webpack": "5.33.2",
    "webpack-cli": "4.6.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "5.2.1",
    "url-loader": "4.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
